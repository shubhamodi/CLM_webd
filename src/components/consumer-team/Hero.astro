---
const { title, desc, image } = Astro.props;
import GetADemobutton from "../ui/GetADemobutton.astro";
import { Image } from "astro:assets";
---

<style>
  .custom-background {
    background-image: url("/hero-dark-bg-3000.svg");
    background-size: cover;
    background-position: center;
    box-shadow: inset 0 -130px 200px 0px #fff;
  }
</style>
<!-- w-11/12 max-w-7xl mx-auto md:h-screen text-[#000000] font-light flex flex-col justify-center -->

<section class="relative pt-36 mb-12 md:pt-12 md:mb-12 custom-background">
  <div
    class="w-11/12 max-w-7xl mx-auto md:h-screen text-[#000000] font-light flex flex-col justify-center"
  >
    <div class="md:w-9/12 max-w-7xl image-container">
      <div class="text-5xl md:text-6xl">
        {title}
      </div>
    </div>
    <div
      class="flex flex-col-reverse mt-8 md:flex-row-reverse gap-8 md:gap-24 w-full md:mt-32"
    >
      <Image
        src={image}
        class="object-cover zoom-effect rounded-3xl"
        alt="Homepage Hero Image"
        width={850}
        height={500}
      />

      <div class="text-base flex flex-col gap-6">
        <div>
          {desc}
        </div>
        <div class="flex flex-col items-start gap-4 my-8 md:my-0 md:flex-row">
          <GetADemobutton />
        </div>
      </div>
    </div>
  </div>
</section>
