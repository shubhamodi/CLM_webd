---
const { title, desc, image } = Astro.props;
import GetADemobutton from "../ui/GetADemobutton.astro";
import { Image } from "astro:assets";
---

<section class="relative custom-background">
    <div
        class="w-11/12 pt-24 max-w-7xl mx-auto h-screen md:h-screen text-[#f5f6f6] font-light flex flex-col justify-center gap-8"
    >
        <div class="md:w-9/12 max-w-7xl image-container">
            <div class="text-5xl md:text-6xl">
                {title}
            </div>
        </div>
        <div class="flex flex-col-reverse mt-8 md:flex-row-reverse gap-8 md:gap-24 items-center w-full md:mt-32">
            <Image
                src={image}
                class=" object-cover zoom-effect"
                alt="Homepage Hero Image"
                width={850}
                height={500}
            />

            <div class="text-base flex flex-col gap-6">
                <div>
                    {desc}
                </div>
                <div class="flex flex-col items-start gap-4 my-8 md:my-0 md:flex-row">
                    <GetADemobutton/>
                </div>
            </div>
        </div>
    </div>
</section>
