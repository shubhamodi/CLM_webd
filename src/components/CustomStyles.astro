    animation-delay: 1.8s;
  }

  .star:nth-child(6)::before,
  .star:nth-child(6)::after {
    animation-delay: 1.8s;
  }

  .star:nth-child(7) {
    /* left: calc(10% - -100px); */
    top: calc(5%);
    left: calc(10%);
    animation-delay: 0.9s;
