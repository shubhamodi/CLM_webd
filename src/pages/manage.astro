---

<BaseLayout title="ContraVault - Manage">
    <Hero title={title} desc={desc} image={image} />
    <Metrics metrics={metrics} />
    <!-- <Testimonials /> -->
    {
        features.map((feature, index) => (
            <Features feature = {feature}/>
        ))
    }
    <MetricsCarousel />
</BaseLayout>
