const metrics = [
    {
        value: "Streamlined Processes",
        title: "75% faster contract completion from draft to execution",
    },
    {
        value: "Rapid Approvals",
        title: "80% reduction in approval time with automated workflows",
    },
    {
        value: "Enhanced Coordination",
        title: "85% improvement in task management and coordination",
    },
];

const features = [
    {
        title: "Automated Workflow Creation",
        image: "https://images.unsplash.com/photo-1552793494-111afe03d0ca?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjN8fG9mZmljZXxlbnwwfDB8MHx8fDI%3D",
        desc: "Our AI designs and manages workflows to streamline the entire contract lifecycle, from drafting to final execution",
        feature_highlights: [
            "Custom Workflow Templates: Create templates tailored to your specific contract processes",
"Task Assignment: Automatically assigns tasks to relevant team members",
"Milestone Tracking: Monitors key milestones and deadlines",
"Progress Monitoring: Tracks the progress of each contract through its lifecycle",
"Real-time Notifications: Alerts stakeholders of task assignments and changes in status",
"Workflow Visualization: Provides visual representations of workflows for easy management",
