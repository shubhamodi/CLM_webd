---
import Layout from '~/layouts/PageLayout.astro';
import { useState } from 'react';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Anime from '~/components/Anime.astro';
import Cards from '~/components/chatapp/Cards.astro';
import Recommendation from '~/components/chatapp/Recommendation.astro';
import Marketing from '~/components/Marketing';
import Chatapp from '~/components/chatapp/Chatapp';
import CarouselSlider from '~/components/CarouselSlider';
import { AiOutlineShop, AiOutlineShoppingCart, AiOutlineArrowRight } from 'react-icons/ai';
import { TbBuildingEstate } from 'react-icons/tb';
import { SiWeb3Dotjs } from 'react-icons/si';
import { MdOutlineHealthAndSafety, MdOutlineCastForEducation } from 'react-icons/md';
import { VscWorkspaceTrusted } from 'react-icons/vsc';
import { GiMoneyStack } from 'react-icons/gi';
import { BsBank, BsClipboard2Check } from 'react-icons/bs';
import FAQ from '~/components/FAQ';

const metadata = {
  title: "Drive Sales with Blozum's AI WhatsApp Chatbot - Engage & Convert",
  ignoreTitleTemplate: true,
  description:
    "Boost your sales strategy with Blozum's WhatsApp Chatbot. Engage customers directly on WhatsApp, automate responses, and convert conversations into sales opportunities.",
};
---

<style is:global>
  .custom-scroll::-webkit-scrollbar-thumb {
    background-color: rgba(80, 133, 224, 0.869);
    border-radius: 5px;
  }

  .custom-scroll::-webkit-scrollbar {
    width: 0.3rem;
    height: 0.3rem;
  }

  .text_color {
    background: linear-gradient(to right, #676872, #fff, #676872);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .gradient_my {
    background-color: conic-gradient(#314235, transparent, transparent, transparent, #314235);
  }
  .gradient_my_upside_down {
    background-color: radial-gradient(140% 107.13% at 50% 10%, transparent 37.41%, #63e 69.27%, #fff 100%);
  }

  .footer_grad {
    background: linear-gradient(179.86deg, hsla(0, 0%, 100%, 0.07) 0.12%, hsla(0, 0%, 100%, 0.03) 99.88%);
    box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  }

  .parent {
    border-color: #0b6e4f;
  }

  .child {
    background-color: transparent;
  }

  .parent:hover {
    transform: scale(1.05);
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
  }

  .parent:hover .child {
    background-color: #0b6e4f;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
  }

  .parent:hover .rotation {
    transform: rotate(180deg);
  }

  .card {
    display: flex;
    justify-content: center;
    border-radius: 1.5rem;
    width: 100%;
    padding-top: 3rem;
    padding-bottom: 3rem;
    max-width: 80%;
    box-shadow: var(--shadow-elevation-medium);
  }

  .faq-container {
    transform: translateX(25px);
  }
</style>

<Layout metadata={metadata} className="relative">
  <Hero
    class="gradient_my pb-0"
    actions={[
      {
        variant: 'primary',
        text: 'Get started Now!',
        href: 'https://calendly.com/intro-with-teamblozum/30min',
        target: '_blank',
      },
    ]}
  >
    <div class="text_color md:my-6" slot="title">Maximize Sales on WhatsApp</div>

    <div class="text-white my-6" slot="subtitle">
      Transform every conversation into a potential sale with our cutting-edge AI technology.
    </div>
  </Hero>

  <div class="flex justify-center flex-col md:mx-24 mx-12 xl:mb-32 sm:h-[500px] xl:flex-row">
    <div class="relative hidden w-full xl:inline-block xl:w-6/12 xl:min-w-[384px]">
      <div class="absolute w-full my-16">
        <p class="text-2xl md:text-4xl leading-10 font-bold">Features</p>
        <div
          class="opacity-50 border-b last:border-transparent border-white/10 group hover:border-white hover:last:border-white hover:opacity-100 transition-all duration-300 cursor-pointer"
        >
          <p class="w-full pt-6 pb-2 text-2xl leading-10 text-left text-white font-semibold">
            Effortless, Full Automation on WhatsApp
          </p>

          <p class="pb-6 overflow-hidden text-white/70">
            Our AI assistant not only sends out messages but also smartly replies, making conversations natural and
            fully automated.
          </p>
        </div>
        <div
          class="opacity-50 border-b last:border-transparent border-white/10 group hover:border-white hover:last:border-white hover:opacity-100 transition-all duration-300 cursor-pointer"
        >
          <p class="w-full pt-6 pb-2 text-2xl leading-10 text-left text-white font-semibold">Ultra-Fast Setup!</p>
          <p class="pb-6 overflow-hidden text-white/70">
            Get everything up and running on your WhatsApp in just half a day!
          </p>
        </div>
        <div
          class="opacity-50 border-b last:border-transparent border-white/10 group hover:border-white hover:last:border-white hover:opacity-100 transition-all duration-300 cursor-pointer"
        >
          <p class="w-full pt-6 pb-2 text-2xl leading-10 text-left text-white font-semibold">
            Beyond WhatsApp Templates
          </p><p class="pb-6 overflow-hidden text-white/70">
            Our AI doesn't just use templates - it creates responses on the go, tailored for each customer interaction.
          </p>
        </div>
      </div>
    </div>

    <div class="relative hidden w-full xl:inline-block xl:w-6/12 xl:min-w-[384px] mt-auto mb-[50px]">
      <div class="w-full h-full absolute">
        <Anime />
      </div>
    </div>

    <div class="md:px-7 w-full relative sm:px-0 mx-auto xl:my-6 xl:hidden">
      <div class="keen-slider !overflow-visible pb-24">
        <div class="space-y-4 keen-slider__slide active md:my-0 my-8">
          <p class="text-2xl leading-10 font-semibold text_color">Effortless, Full Automation on WhatsApp</p><p
            class="text-white/70 text-sm"
          >
            Our AI assistant not only sends out messages but also smartly replies, making conversations natural and
            fully automated.
          </p>
        </div>

        <div class="space-y-4 keen-slider__slide md:my-0 my-8">
          <p class="text-2xl leading-10 font-semibold text_color">Ultra-Fast Setup!</p>
          <p class="text-white/70 text-sm">Get everything up and running on your WhatsApp in just half a day!</p>
        </div>

        <div class="space-y-4 keen-slider__slide md:my-0 my-8">
          <p class="text-2xl leading-10 font-semibold text_color">Beyond WhatsApp Templates</p><p
            class="text-white/70 text-sm"
          >
            Our AI doesn't just use templates - it creates responses on the go, tailored for each customer interaction.
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Higher Conversion Rates:',
        description: 'Engage customers with instant, relevant responses, boosting the likelihood of conversions.',
      },
      {
        title: 'Increased Revenue:',
        description: 'Personalized interactions drive sales, leading to higher revenue.',
      },
      {
        title: 'Improved Customer Satisfaction:',
        description: 'Quick, accurate responses from our AI assistant enhance customer experience and loyalty.',
      },
      {
        title: 'Time Efficiency:',
        description: `Save hours with automated interactions, focusing your resources on growth.`,
      },
      {
        title: 'Scalable Communication:',
        description: `Effortlessly handle a growing volume of queries without additional manpower.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Benefits for Customers:</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <div
    style={{
      background: 'radial-gradient(131.66% 109.77% at 50% 97.75%,transparent 37.41%,#0b6e4f 69.27%,#fff 100%)',
    }}
    class="md:m-8 text-center p-16 rounded-[2.8rem]"
  >
    <div class="mt-20 max-w-3xl pb-12 md:pb-10 mx-auto">
      <h2
        class="md:text-4xl text-2xl bg-clip-text font-bold bg-gradient-to-r from-gray-100/60 via-gray-100 to-gray-100/60 pb-4"
      >
        Why choose us: Discover Our Unique Edge
      </h2>
      <p class="text-lg text-gray-300">Experience the Future of WhatsApp Communication Today!</p>
    </div>

    <div class="divide-y divide-gray-800">
      <div class="py-8 pt-4 first-of-type:pt-0 last-of-type:pb-0">
        <div>
          <div class="inline-flex text-xl font-medium bg-clip-text text-transparent text-white pb-6">
            Our Unique Selling Points (USPs)
          </div>
        </div>

        <div class="grid md:grid-cols-4 gap-4 md:gap-6 mb-2">
          <div class="group rounded-[2.8rem] p-6 ring-gray-900/5 border-[1.5px] border-gray-700/50 ring-0">
            <div class="flex items-center justify-center space-x-2 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-4"
                ><polygon points="13 19 22 12 13 5 13 19"></polygon><polygon points="2 19 11 12 2 5 2 19"
                ></polygon></svg
              >

              <h4 class="font-medium text-gray-50 p-4">Unparalleled AI Automation</h4>
            </div>

            <p class="text-sm text-gray-400 p-4">
              Unlike others, we offer end-to-end AI-driven conversations - not just automated messages, but intelligent,
              personalized replies.
            </p>
          </div>

          <div class="group rounded-[2.8rem] p-6 ring-gray-900/5 border-[1.5px] border-gray-700/50 ring-0">
            <div class="flex items-center justify-center space-x-2 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-4"
                ><polygon points="13 19 22 12 13 5 13 19"></polygon><polygon points="2 19 11 12 2 5 2 19"
                ></polygon></svg
              >
              <h4 class="font-medium text-gray-50 p-4">Rapid Deployment</h4>
            </div>

            <p class="text-sm text-gray-400 p-4">
              Get up and running in just half a day! Speedy setup without compromising quality.
            </p>
          </div>
          <div class="group rounded-[2.8rem] p-6 ring-gray-900/5 border-[1.5px] border-gray-700/50 ring-0">
            <div class="flex items-center justify-center space-x-2 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-4"
                ><polygon points="13 19 22 12 13 5 13 19"></polygon><polygon points="2 19 11 12 2 5 2 19"
                ></polygon></svg
              >
              <h4 class="font-medium text-gray-50 p-4">Beyond Templates</h4>
            </div>

            <p class="text-sm text-gray-400 p-4">
              Our AI crafts responses in real-time, providing unique, context-aware interactions for each customer.
            </p>
          </div>
          <div class="group rounded-[2.8rem] p-6 ring-gray-900/5 border-[1.5px] border-gray-700/50 ring-0">
            <div class="flex items-center justify-center space-x-2 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-4"
                ><polygon points="13 19 22 12 13 5 13 19"></polygon><polygon points="2 19 11 12 2 5 2 19"
                ></polygon></svg
              >
              <h4 class="font-medium text-gray-50 p-4">Enhanced Customer Experience</h4>
            </div>

            <p class="text-sm text-gray-400 p-4">
              Every interaction is designed to increase satisfaction, leading to higher conversions and loyalty.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ Section-->
  <div class="flex justify-center items-center">
    <div class="card">
      <div class="faq-container">
        <div class="flex justify-center mt-n60">
          <h1
            class="md:text-4xl text-2xl text-center bg-clip-text text-transparent bg-gradient-to-r from-gray-100/60 via-gray-100 to-gray-100/60 pb-4"
          >
            FAQ
          </h1>
        </div>
        <FAQ client:load idx={1} />
      </div>
    </div>
  </div>
</Layout>
